# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações do JWT
JWT_SECRET=sua_chave_secreta
JWT_EXPIRES_IN=7d

# Configurações do Banco de Dados
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui
DB_NAME=zapclick
DB_SSL=false

# Configurações do Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=sua_senha_aqui

# Configurações do WhatsApp
WHATSAPP_SESSION_FILE=whatsapp-session.json

# Configurações da OpenAI
OPENAI_API_KEY=sua_chave_api_aqui

# Configurações da Hotmart
HOTMART_CLIENT_ID=your_hotmart_client_id
HOTMART_CLIENT_SECRET=your_hotmart_client_secret
HOTMART_BASIC_PRODUCT_ID=your_basic_product_id
HOTMART_BASIC_OFFER_CODE=your_basic_offer_code
HOTMART_PREMIUM_PRODUCT_ID=your_premium_product_id
HOTMART_PREMIUM_OFFER_CODE=your_premium_offer_code
HOTMART_WEBHOOK_TOKEN=your_hotmart_webhook_token

# Configurações de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_aqui
SMTP_FROM=seu_email@gmail.com

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Admin
ADMIN_EMAIL=admin@email.com
ADMIN_PASSWORD=sua_senha_segura

# MongoDB
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# Next.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# API
API_URL=http://localhost:3000/api
APP_URL=http://localhost:3000 